{
  "extends": "adonis-preset-ts/tsconfig.json",
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "recipes"
  ],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "strict": true,
    "incremental": true,
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Config/*": [
        "./config/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Database/*": [
        "./database/*"
      ]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@japa/preset-adonis/build/adonis-typings",
      "@adonisjs/view",
      "@adonisjs/lucid",
      "@adonisjs/auth",
      "@adonisjs/shield",
      "@adonisjs/session",
      "@adonisjs/mail",
      "fs-extra"
    ],
    "sourceMap": true,

    // TODO: Uncomment all these at a later point
    // "skipLibCheck": true,
    // TODO: Need to switch
    "noImplicitAny": false,
    // "pretty": true,
    // "allowSyntheticDefaultImports": true,
    // "experimentalDecorators": true,
    // "composite": false,
    // "importHelpers": true,
    // "removeComments": true,
    // "allowUnreachableCode": false,
    // "allowUnusedLabels": false,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noImplicitReturns": true,
    // "noImplicitThis": true,
    // "preserveConstEnums": true,
    // "strictNullChecks": true,
    // "noFallthroughCasesInSwitch": true,
    // "resolveJsonModule": true,
    // "forceConsistentCasingInFileNames": true,
    // "useDefineForClassFields": true
  }
}
