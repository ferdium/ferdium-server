{
  "name": "ferdium-server",
  "version": "2.0.0",
  "description": "Ferdium server to replace the default Franz/Ferdi server.",
  "engines": {
    "node": "18.18.0",
    "pnpm": "8.7.6",
    "python": "3.11.1"
  },
  "engine-strict": true,
  "homepage": "https://github.com/ferdium/ferdium-server",
  "license": "MIT License",
  "scripts": {
    "prepare": "is-ci || husky install",
    "dev": "ENV_PATH=.env.development node ace serve --watch",
    "build": "node ace build --production",
    "start": "node server.js",
    "test": "ENV_PATH=.env.test node ace test",
    "lint": "tsc --noEmit && eslint \"**/*.{js,mjs,ts}\"",
    "lint:fix": "eslint --fix \"**/*.{js,mjs,ts}\"",
    "reformat-files": "prettier --ignore-path .eslintignore --write --require-pragma \"**/*.{js,mjs,ts,scss}\"",
    "prepare-code": "pnpm lint:fix && pnpm reformat-files"
  },
  "devDependencies": {
    "@adonisjs/assembler": "5.9.5",
    "@japa/preset-adonis": "1.2.0",
    "@japa/runner": "2.2.2",
    "@symfony/webpack-encore": "4.1.2",
    "@types/fs-extra": "9.0.13",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "adonis-preset-ts": "2.1.0",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-adonis": "2.1.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.1.6",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-unicorn": "45.0.1",
    "husky": "8.0.2",
    "is-ci": "3.0.1",
    "pino-pretty": "9.1.1",
    "prettier": "2.8.1",
    "typescript": "4.9.4",
    "youch": "3.2.2",
    "youch-terminal": "2.1.5"
  },
  "dependencies": {
    "@adonisjs/auth": "8.2.3",
    "@adonisjs/core": "5.9.0",
    "@adonisjs/lucid": "18.3.0",
    "@adonisjs/mail": "8.1.2",
    "@adonisjs/repl": "3.1.11",
    "@adonisjs/session": "6.4.0",
    "@adonisjs/shield": "7.1.0",
    "@adonisjs/view": "6.2.0",
    "aws-sdk": "2.1272.0",
    "fs-extra": "11.1.0",
    "luxon": "3.1.1",
    "moment": "2.29.4",
    "mysql": "2.18.1",
    "pg": "8.8.0",
    "phc-bcrypt": "1.0.8",
    "proxy-addr": "2.0.7",
    "rand-token": "1.0.1",
    "reflect-metadata": "0.1.13",
    "source-map-support": "0.5.21",
    "sqlite3": "5.1.2",
    "uuid": "9.0.0"
  }
}
