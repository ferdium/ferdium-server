{
  "name": "ferdium-server",
  "version": "2.0.6",
  "description": "Ferdium server to replace the default Franz/Ferdi server.",
  "engines": {
    "node": "20.12.2",
    "pnpm": "8.15.7",
    "python": "3.12.3"
  },
  "engine-strict": true,
  "volta": {
    "node": "20.12.2",
    "pnpm": "8.15.7",
    "python": "3.12.3"
  },
  "packageManager": "pnpm@8.15.7",
  "homepage": "https://github.com/ferdium/ferdium-server",
  "license": "MIT License",
  "scripts": {
    "prepare": "is-ci || husky",
    "dev": "node ace serve --watch",
    "migrate": "node ace migration:run",
    "refresh": "node ace migration:refresh",
    "status": "node ace migration:status",
    "build": "node ace build",
    "start": "node bin/server.js",
    "test": "node ace test",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "reformat-files": "prettier --write .",
    "prepare-code": "pnpm typecheck && pnpm lint:fix && pnpm reformat-files && pnpm test"
  },
  "imports": {
    "#app/*": "./app/*.js",
    "#controllers/*": "./app/Controllers/*.js",
    "#models/*": "./app/Models/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/Middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#database/*": "./database/*.js",
    "#tests/*": "./tests/*.js",
    "#start/*": "./start/*.js",
    "#config/*": "./config/*.js",
    "#types/*": "./types/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "7.5.0",
    "@adonisjs/eslint-config": "1.3.0",
    "@adonisjs/eslint-plugin": "1.3.0",
    "@adonisjs/prettier-config": "1.3.0",
    "@adonisjs/tsconfig": "1.3.0",
    "@adonisjs/vite": "2.0.2",
    "@japa/api-client": "2.0.3",
    "@japa/assert": "3.0.0",
    "@japa/plugin-adonisjs": "3.0.1",
    "@japa/runner": "3.1.4",
    "@swc/core": "1.4.16",
    "@types/bcrypt": "5.0.2",
    "@types/fs-extra": "11.0.4",
    "@types/luxon": "3.4.2",
    "@types/proxy-addr": "2.0.3",
    "@types/semver": "7.5.8",
    "@types/targz": "1.0.4",
    "@types/uuid": "9.0.8",
    "@typescript-eslint/eslint-plugin": "7.7.0",
    "@typescript-eslint/parser": "7.7.0",
    "eslint": "8.57.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-unicorn": "52.0.0",
    "husky": "9.0.11",
    "is-ci": "3.0.1",
    "prettier": "3.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.4.5",
    "vite": "5.2.9"
  },
  "dependencies": {
    "@adonisjs/auth": "9.2.0",
    "@adonisjs/core": "6.7.1",
    "@adonisjs/cors": "2.2.1",
    "@adonisjs/lucid": "20.5.1",
    "@adonisjs/mail": "9.2.1",
    "@adonisjs/session": "7.4.0",
    "@adonisjs/shield": "8.1.1",
    "@adonisjs/static": "1.1.1",
    "@adonisjs/validator": "13.0.2",
    "@aws-sdk/client-ses": "3.556.0",
    "adonis5-jwt": "github:SpecialAro/adonis5-jwt#34941c10adcf89583a40767552b994ea499b92e3",
    "bcrypt": "5.1.1",
    "edge.js": "6.0.2",
    "fs-extra": "11.2.0",
    "jose": "5.2.4",
    "luxon": "3.4.4",
    "moment": "2.30.1",
    "mysql": "2.18.1",
    "pg": "8.11.5",
    "proxy-addr": "2.0.7",
    "rand-token": "1.0.1",
    "reflect-metadata": "0.2.2",
    "sanitize-filename": "1.6.3",
    "semver": "7.6.0",
    "sqlite3": "5.1.7",
    "targz": "1.0.1",
    "uuid": "9.0.1"
  },
  "pnpm": {
    "allowedDeprecatedVersions": {
      "@npmcli/move-file": "1.1.2"
    }
  },
  "type": "module"
}
